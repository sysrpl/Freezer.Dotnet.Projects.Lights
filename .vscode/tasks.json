{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "process",
            "command": "dotnet",
            "args": [
                "build",
                "${workspaceFolder}/lights/lights.csproj",
                "--no-restore",
                "--no-dependencies",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build release",
            "type": "process",
            "command": "dotnet",
            "args": [
                "build",
                "${workspaceFolder}/lights/lights.csproj",
                "-c",
                "Release",
                "--no-restore",
                "--no-dependencies",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/lights.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "deploy lights",
            "type": "shell",
            "command": "/home/gigauser/Development/Dotnet/Projects/Lights/deploy",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/lights/lights.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}
